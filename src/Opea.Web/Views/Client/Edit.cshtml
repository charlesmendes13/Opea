@{
    ViewData["Title"] = "Edit";
}

@model Opea.Application.ViewModels.ClientViewModel

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanySizeId" class="control-label">Porte da Empresa</label>
                <select asp-for="CompanySizeId" class="form-control" asp-items="ViewBag.CompanySize"></select>
                <span asp-validation-for="CompanySizeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-top: 10px">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 10px">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
